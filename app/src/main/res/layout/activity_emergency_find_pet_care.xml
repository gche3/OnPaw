<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pastel_tan">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pastel_tan"
        android:elevation="2dp"
        android:title="@string/emergency_find_pet_care_title"
        app:titleCentered="true"
        app:menu="@menu/menu_emergency" />

    <LinearLayout
        android:id="@+id/stepperContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvStepTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step 1 of 4"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/stepProgress"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:layoutDirection="ltr"
            android:progress="0"
            app:trackColor="@color/pastel_gray"
            app:indicatorColor="@color/pastel_blue" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/stepsContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/stepAnimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/select_animal_type"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:id="@+id/animalOptionList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardAnimalDog"
                            style="@style/OnPaw.TaskCard"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/pet_drop_off"
                                    app:tint="@color/text_hint" />

                                <TextView
                                    android:id="@+id/tvAnimalDog"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="@string/animal_dog"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardAnimalCat"
                            style="@style/OnPaw.TaskCard"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/pet_drop_off"
                                    app:tint="@color/text_hint" />

                                <TextView
                                    android:id="@+id/tvAnimalCat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="@string/animal_cat"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardAnimalBunny"
                            style="@style/OnPaw.TaskCard"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/pet_drop_off"
                                    app:tint="@color/text_hint" />

                                <TextView
                                    android:id="@+id/tvAnimalBunny"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="@string/animal_bunny"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardAnimalHamster"
                            style="@style/OnPaw.TaskCard"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/pet_drop_off"
                                    app:tint="@color/text_hint" />

                                <TextView
                                    android:id="@+id/tvAnimalHamster"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="@string/animal_hamster"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardAnimalAdd"
                            style="@style/OnPaw.TaskCard"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            app:strokeWidth="0dp"
                            app:strokeColor="@android:color/transparent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@android:drawable/ic_input_add"
                                    app:tint="@color/text_hint" />

                                <TextView
                                    android:id="@+id/tvAnimalAdd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="Add animal type"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_hint" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stepTasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/what_tasks_needed"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="12dp" />

                    <androidx.gridlayout.widget.GridLayout
                        android:id="@+id/gridTasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:alignmentMode="alignMargins"
                        app:columnCount="2"
                        app:rowOrderPreserved="false"
                        app:useDefaultMargins="true">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardDropoff"
                            style="@style/OnPaw.TaskCard"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1"
                            app:layout_gravity="fill">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/pet_drop_off"
                                    app:tint="@color/text_hint" />

                                <TextView
                                    android:id="@+id/tvTaskDropoff"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/task_dropoff"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:layout_marginTop="8dp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardCheckup"
                            style="@style/OnPaw.TaskCard"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1"
                            app:layout_gravity="fill">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/on_site_checkup"
                                    app:tint="@color/text_hint" />

                                <TextView
                                    android:id="@+id/tvTaskCheckup"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/task_onsite_checkup"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:layout_marginTop="8dp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardMeds"
                            style="@style/OnPaw.TaskCard"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1"
                            app:layout_gravity="fill">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/medication"
                                    app:tint="@color/text_hint" />

                                <TextView
                                    android:id="@+id/tvTaskMeds"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/task_medication"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:layout_marginTop="8dp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardTransport"
                            style="@style/OnPaw.TaskCard"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1"
                            app:layout_gravity="fill">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/emergency_transport"
                                    app:tint="@color/text_hint" />

                                <TextView
                                    android:id="@+id/tvTaskTransport"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/task_transport"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:layout_marginTop="8dp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </androidx.gridlayout.widget.GridLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stepSymptoms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/what_symptoms"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:id="@+id/symptomOptionList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardSymLethargy"
                            style="@style/OnPaw.TaskCard"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:id="@+id/tvSymLethargy"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:text="@string/sym_lethargy"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardSymVomit"
                            style="@style/OnPaw.TaskCard"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:id="@+id/tvSymVomit"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:text="@string/sym_vomit"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardSymBreathing"
                            style="@style/OnPaw.TaskCard"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:id="@+id/tvSymBreathing"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:text="@string/sym_breathing"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardSymInjury"
                            style="@style/OnPaw.TaskCard"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:id="@+id/tvSymInjury"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:text="@string/sym_injury"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardSymSeizure"
                            style="@style/OnPaw.TaskCard"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:id="@+id/tvSymSeizure"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:text="@string/sym_seizure"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardSymAdd"
                            style="@style/OnPaw.TaskCard"
                            android:layout_width="match_parent"
                            android:layout_height="72dp">

                            <TextView
                                android:id="@+id/tvSymAdd"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:text="Add symptom"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_hint" />
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stepLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/location"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/OnPaw.LightField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/pickup_location_hint"
                        app:startIconDrawable="@android:drawable/ic_menu_mylocation"
                        app:startIconTint="@color/text_hint"
                        app:hintEnabled="false"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPickup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/current_location_default"
                            android:textColor="@color/text_primary" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/OnPaw.LightField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@android:drawable/ic_menu_directions"
                        app:hintEnabled="false"
                        app:startIconTint="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDestination"
                            android:hint="@string/destination_optional_hint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/additional_notes_optional"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/OnPaw.LightField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNotes"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:gravity="top|start"
                            android:hint="@string/notes_placeholder"
                            android:textColor="@color/text_primary"
                            android:inputType="textMultiLine" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>
        </FrameLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="4dp"
        android:paddingBottom="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            style="@style/OnPaw.PrimaryCTA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:minWidth="0dp"
            android:paddingVertical="10dp"
            android:text="Back"
            android:enabled="false"
            android:backgroundTint="@color/pastel_gray"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:maxLines="2" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRequest"
            style="@style/OnPaw.PrimaryCTA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:minWidth="0dp"
            android:paddingVertical="10dp"
            android:text="Next"
            android:gravity="center"
            android:maxLines="2" />

    </LinearLayout>

</LinearLayout>
