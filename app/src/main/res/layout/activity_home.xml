<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pastel_tan"
    android:padding="32dp"
    tools:context=".MainActivity">

    <!-- Spacer -->

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="32dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/paw"
            android:contentDescription="@string/app_logo"
            app:tint="@color/cardview_dark_background" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textSize="48sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/cardview_dark_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/paw"
            android:contentDescription="@string/app_logo"
            app:tint="@color/cardview_dark_background" />
    </LinearLayout>


    <!-- Main Navigation Buttons -->
    <Button
        android:id="@+id/btn_pet_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/pastel_blue"
        android:text="@string/i_am_a_pet_owner"
        android:textSize="24sp"
        android:paddingVertical="20dp" />

    <Button
        android:id="@+id/btn_pet_sitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/pastel_blue"
        android:text="@string/i_am_a_pet_sitter"
        android:textSize="24sp"
        android:paddingVertical="20dp" />

    <Button
        android:id="@+id/btn_emergency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/pastel_blue"
        android:text="@string/i_have_an_emergency"
        android:textSize="24sp"
        android:paddingVertical="20dp" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
