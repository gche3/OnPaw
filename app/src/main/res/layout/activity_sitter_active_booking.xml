<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pastel_tan"
    tools:context=".SitterActiveBookingActivity">

    <!-- Top section with map -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <org.osmdroid.views.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Back button overlay -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@drawable/circle_background"
            android:contentDescription="Back"
            app:tint="@color/text_primary" />

    </FrameLayout>

    <!-- Bottom card with booking info -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Owner info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/account"
                    app:tint="@color/pastel_blue"
                    android:contentDescription="Owner" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tvOwnerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Owner Name"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvPetInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pet: Buddy (Dog)"
                        android:textSize="14sp"
                        android:textColor="@color/text_hint" />

                </LinearLayout>

                <!-- Call button -->
                <ImageView
                    android:id="@+id/btn_call"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:src="@drawable/ic_call"
                    android:background="@drawable/circle_background"
                    android:contentDescription="Call"
                    app:tint="@color/pastel_blue" />

            </LinearLayout>

            <!-- Destination info -->
            <TextView
                android:id="@+id/tvDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Destination: 123 Main St"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="8dp"
                android:drawableTint="@color/pastel_blue" />

            <!-- Tasks -->
            <TextView
                android:id="@+id/tvTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tasks: Drop-off, Medication"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginTop="8dp" />

            <!-- Notes -->
            <TextView
                android:id="@+id/tvNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notes: None"
                android:textSize="14sp"
                android:textColor="@color/text_hint"
                android:layout_marginTop="8dp" />

            <!-- Action buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chat"
                    app:backgroundTint="@color/pastel_brown"
                    android:textColor="@color/text_primary"
                    app:icon="@drawable/ic_chat"
                    app:iconTint="@color/text_primary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnComplete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Complete"
                    app:backgroundTint="@color/pastel_blue" />

            </LinearLayout>

            <!-- Cancel button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cancel Booking"
                android:textColor="@color/emergency_red"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>

